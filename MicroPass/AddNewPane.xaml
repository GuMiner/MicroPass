<Window x:Class="MicroPass.AddNewPane"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicroPass"
        mc:Ignorable="d"
        Title="Add New Account" Height="207.333" Width="200.667" ResizeMode="NoResize" ShowInTaskbar="False" Icon="TraySprite.ico">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="32*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Account Name" Margin="0,0,10,142" Height="26" VerticalAlignment="Bottom" Grid.Column="1"/>
        <TextBox x:Name="newAccountBox" Margin="4,0,10,119" TextWrapping="Wrap" Text="" Grid.Column="1" Height="25" VerticalAlignment="Bottom"/>
        <Label Content="Account Details" Margin="4,0,10,88" Height="26" VerticalAlignment="Bottom" Grid.Column="1"/>
        <TextBox x:Name="newAccountPasswordBox" Margin="4,0,10,37" TextWrapping="Wrap" Text="" Height="51" VerticalAlignment="Bottom" Grid.Column="1"/>
        <Button Content="Add" x:Name="addButton" Grid.Column="1" Margin="101,0,13,12" Click="AddButton_Click" Height="20" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
